<%= render 'layouts/header' %>
<h1>ユーザーページ</h1>
<%=link_to "ホームに戻る", root_path %>
<% if user_signed_in?  && current_user == @user.id %>
  <%= link_to "新規作成",  new_blog_path %>
<% end %>
<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.blogs.any? %>
      <h3>投稿一覧 (<%= @user.blogs.count %>)</h3>
      <ol class="blogs">
        <%= render @blogs %>
      </ol>
      <%= will_paginate @blogs %>
    <% end %>
  </div>
</div>
