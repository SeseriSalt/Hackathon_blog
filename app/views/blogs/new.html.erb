<%= render 'layouts/header' %>
<div class="container">
  <h1>投稿の作成</h1>
    <div class="col-md-6 col-md-offset-3 field">
      <%= form_with(model: @blog, local: true) do |f| %>
        <%= f.label :title %>
        <%= f.text_field :title, placeholder: "タイトル" %>
        <%= f.label :content %>
        <%= f.text_area :content, placeholder: "投稿を作成..." %>
    </div>
         <%= f.submit "ブログを投稿", class: "btn btn-primary" %>
      <% end %>
</div>